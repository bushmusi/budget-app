<%= render 'layouts/navigation' , title: "New Category", path: category_index_path %>

<%= form_with model: @category, url: add_category_path, class: "card form-card" do |form| %>
  <% if @category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, class: 'form-control',
                        placeholder: 'Please enter the name of this category' %>
  </div>

  <div class="form-group">
    <%= form.label 'Icon' %>
    <select name="category[icon]" id="category_icon" class="form-select" required>
      <option value="fa fa-hand-peace-o">Hand</option>
      <option value="fa fa-heartbeat">Medical</option>
      <option value="fa fa-automobile">Transport</option>
      <option value="fa fa-bank">Bank</option>
    </select>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
